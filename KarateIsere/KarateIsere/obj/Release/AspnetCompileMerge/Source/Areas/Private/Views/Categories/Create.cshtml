@model KarateIsere.DataAccess.Categorie

@using (Html.BeginForm( "Create", "Categories" )) {
    @Html.AntiForgeryToken()

    <div class="form-inline col-md-9">
        @Html.ValidationSummary( true, "", new {
       @class = "text-danger"
   } )
        <div class="form-group col-md-6">

            <div>
                @Html.LabelFor( model => model.Nom, htmlAttributes: new {
               @class = "control-label col-md-2"
           } )
                @Html.EditorFor( model => model.Nom, new {
               htmlAttributes = new {
                   @class = "form-control col-md-10"
               }
           } )
                @Html.ValidationMessageFor( model => model.Nom, "", new {
               @class = "text-danger"
           } )
            </div>
        </div>

        <div class="form-group col-md-2">
            <div>
                <input type="submit" value="Créer" class="btn btn-default" />
            </div>
        </div>
    </div>
}