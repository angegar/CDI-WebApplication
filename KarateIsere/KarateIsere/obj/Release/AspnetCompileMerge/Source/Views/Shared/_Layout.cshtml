<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CDI</title>
    @Styles.Render( "~/Content/css" )
    @Styles.Render( "~/Content/Gridmvc.css" )
    @Styles.Render( "~/Content/bootstrap.min.css" )
    @Styles.Render( "~/Content/site.css" )
    @Scripts.Render( "~/bundles/modernizr" )

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink( "Karaté Isère", "Index", "Home", new {
               area = ""
           }, new {
               @class = "navbar-brand"
           } )
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Clubs <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                @Html.ActionLink( "Carte des clubs", "Carte", "ClubMap", new {
                           area = "Public"
                       }, null )
                            </li>
                            <li>
                                @Html.ActionLink( "Liste des clubs", "Index", "ClubMap", new {
                           area = "Public"
                       }, null )
                            </li>
                        </ul>
                    </li>

                    <li>
                        @Html.ActionLink( "À propos de", "About", "Home", new {
                       area = ""
                   }, null )
                    </li>


                    <li>
                        @Html.ActionLink( "Contact", "Contact", "Home", new {
                       area = ""
                   }, null )
                    </li>


                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administration <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                @Html.ActionLink( "Catégories", "Index", "Categories", new {
                               area = "Private"
                           }, null )
                            </li>
                            <li>
                                @Html.ActionLink( "Compétitions", "Index", "Competitions", new {
                               area = "Private"
                           }, null )
                            </li>

                        </ul>
                    </li>
                </ul>
                @Html.Partial( "_LoginPartial" )
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Comité Départemental de l'Isère</p>
        </footer>
    </div>

    @Scripts.Render( "~/bundles/jquery" )
    @Scripts.Render( "~/bundles/bootstrap" )
    @Scripts.Render( "~/Scripts/gridmvc.min.js" )
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
    @RenderSection( "scripts", required: false )
</body>
</html>
