@model KarateIsere.DataAccess.Categorie
@using KarateIsere.DataAccess;
@{
    ViewBag.Title = "Index";
    List<Categorie> Categories = (List<Categorie>) ViewBag.Categories;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gestion des catégories</h2>
<hr />
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-title">
            <h4>Créer une nouvelle catégorie</h4>
        </div>
    </div>
    <div class="panel-body">
        @Html.Partial("Create", new Categorie())
    </div>

</div>
<div class="panel panel-default">
    <div class="panel-heading panel-title">
        <h4>Liste des catégories</h4>
    </div>
    <div class="panel-body">
        <table class="table table-responsive table-condensed">
            @foreach (var item in Categories) {
                <tr>
                    <td>@Html.Label(item.Nom)</td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new {
                       area = "Private",
                       nomCate = item.Nom
                   }, null)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
<div class="clearfix"></div>