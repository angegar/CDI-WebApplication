@{
    ViewBag.Title = "Carte";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string clubs = @ViewBag.ClubInfos;
}

<h2>Carte</h2>

<div id="mymap" style="width: 100%; height: 600px;">
</div>

@section scripts{
    <script type="text/javascript"
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBPM3nBdS2boN0s2m6FdQdP3eeW25ajw30&sensor=false&components=country:FR">
    </script>


    @Scripts.Render( "~/Scripts/GoogleMap.js" )

    <script type="text/javascript">
        var clubsInfo = @(Html.Raw(@clubs));
        function Init(){
            InitMap("mymap");
            DisplayClubs(clubsInfo);
        }

        google.maps.event.addDomListener(window, "load", Init);
    </script>
}
