@model KarateIsere.DataAccess.Categorie

@Html.ValidationSummary(true)

@using (Html.BeginForm("Create", "Categories")) {
    @Html.AntiForgeryToken()

    <div class="form-inline">
        <div class=" col-sm-12 col-md-12 col-lg-12">
            @Html.ValidationMessageFor(model => model.Nom, "", new {
           @class = "text-danger"
       })
        </div>
            <div class="form-group col-sm-12 col-md-12 col-lg-12">
                
                @Html.LabelFor(model => model.Nom, htmlAttributes: new {
               @class = "control-label"
           })
                @Html.EditorFor(model => model.Nom, new {
               htmlAttributes = new {
                   @class = "form-control"
               }
           })

                <input type="submit" value="Créer" class="btn btn-default" />
            </div>

    </div>
}

