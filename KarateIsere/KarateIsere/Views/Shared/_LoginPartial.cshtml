@using Microsoft.AspNet.Identity
@using KarateIsere.DataAccess
@using KarateIsere.Models

    @if (Request.IsAuthenticated) {        
        using (Html.BeginForm( "LogOff", "Account",new {area=""}, FormMethod.Post,new {
            id = "logoutForm",
            @class = "navbar-right"
        } )) {
            @Html.AntiForgeryToken()

            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionLink("Bonjour " + User.Identity.GetUserName() + "!", "Edit", "Club", new { area = "Public" },null)      
                </li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Se déconnecter</a></li>
            </ul>
        }
    }
    else {
        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink( "S’inscrire", "Register", "Account", routeValues: null, htmlAttributes: new {
           id = "registerLink"
       } )
        </li>
        <li>
            @Html.ActionLink("Se connecter", "Login", "Account", new { area = "" }, htmlAttributes: new {
            id = "loginLink"
        })
    </li>
</ul>
    }
